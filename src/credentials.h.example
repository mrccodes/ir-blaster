#ifndef CREDENTIALS_H
#define CREDENTIALS_H

// ====== WiFi Configuration ======
// Your WiFi network name (SSID)
#define WIFI_SSID     "YourWiFiSSID"

// Your WiFi password
#define WIFI_PASS     "YourWiFiPassword"

// ====== MQTT Broker Configuration ======
// MQTT broker hostname or IP address (e.g., "homeassistant.local" or "192.168.1.100")
#define MQTT_HOST     "homeassistant.local"

// MQTT broker port (default is 1883 for non-SSL)
#define MQTT_PORT     1883

// MQTT username (if your broker requires authentication)
#define MQTT_USER     "your_mqtt_username"

// MQTT password (if your broker requires authentication)
#define MQTT_PASS     "your_mqtt_password"

// Unique client ID for this ESP32 device
// If you have multiple IR blasters, change this to "esp32-ir-2", "esp32-ir-3", etc.
#define MQTT_CLIENTID "esp32-ir-1"

#endif
